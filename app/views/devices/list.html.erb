<%= render :partial => "display_selection" %>

<div class="wrap">
  <div class="searchable_container">
    <%= form_tag list_devices_path, :method => :get do %>
      <%= text_field_tag :q, params[:q], :placeholder => "Search..." %>
      <%= submit_tag "Search", :class => "hidden" %>
    <% end %>
    <ul class="books books_list resource_list">
      <% @books.each do |book| %>
        <li class="<%= book.available? ? "available" : "unavailable" %>"><%= link_to device_path(book) do %>
          <h2><%= book.model %></h2>
        <% end %></li>
      <% end %>
    </ul>
  </div>
</div>
